CREATE TABLE User
{
ID_User INT NOT NULL AUTO_INCREMENT,
Name TEXT NOT NULL,
Password TEXT NOT NULL,
}

CREATE TABLE Messagerie
{
ID_Messagerie INT NOT NULL AUTO_INCREMENT,

}

CREATE TABLE Autorisation
{
ID_Autorisation INT NOT NULL AUTO_INCREMENT,
IsCreator BOOL NOT NULL DEFAULT 0,
IsMember BOOL NOT NULL DEFAULT 0,
fk_ID_Messagerie INT NOT NULL,
}

CREATE TABLE Text
{
ID_Texte INT NOT NULL AUTO_INCREMENT,
Texte TEXT NOT NULL,
}

CREATE TABLE Message
{
ID_Message INT NOT NULL AUTO_INCREMENT,
DateMessage DATE (YYYY-MM-DD HH:MM:SS),
fk_ID_User INT NOT NULL,
fk_ID_Text TEXT NOT NULL,
}


CREATE TABLE Conversation
{
ID_Conversation INT NOT NULL AUTO_INCREMENT,
Titre TEXT NOT NULL,
fk_ID_Autorisation IN NOT NULL,
}
